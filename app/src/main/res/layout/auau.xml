<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/pink"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/applogo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Umm...SEEK"
            android:layout_marginHorizontal="10dp"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/mapLinear"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_margin="25dp"
            android:text="날씨에 어울리는 음식을 추천해줄게요~!"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/bigCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대도시"/>
                <Button
                    android:id="@+id/choongchung"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="충청도"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/gyunggi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경기도"/>
                <Button
                    android:id="@+id/jeonla"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="전라도"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/kangwon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="강원도"/>
                <Button
                    android:id="@+id/gyungsang"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="경상도"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cityWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=" 의날씨는?   "/>
                <Button
                    android:id="@+id/cityWeatherFind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="조회"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/weatherImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/applogo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/weatherKind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="weather"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/rRed"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_margin="7dp"
            android:text="나만의 음식 추가" />

        <EditText
            android:id="@+id/edtname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:inputType="textPersonName"
            android:textColor="@color/rrRed"
            android:hint="음식 이름"
            android:textColorHint="@color/rrRed"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btncategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/rrRed"
            android:layout_margin="5dp"
            android:text="category" />

        <Button
            android:id="@+id/btnkeyword1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/rrRed"
            android:layout_margin="5dp"
            android:text="keyword1" />

        <Button
            android:id="@+id/btnkeyword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/rrRed"
            android:layout_margin="5dp"
            android:text="keyword2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnflavor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/rrRed"
            android:layout_margin="5dp"
            android:text="flavor" />

        <Button
            android:id="@+id/btnmood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/rrRed"
            android:layout_margin="5dp"
            android:text="mood" />

        <Button
            android:id="@+id/btnweather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/rrRed"
            android:layout_margin="5dp"
            android:text="weather" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnsend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rrRed"
            android:layout_margin="5dp"
            android:text="추가하기" />
    </LinearLayout>
</LinearLayout>